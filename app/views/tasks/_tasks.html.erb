			    <div class="modal-dialog">
			    
			      <!-- Modal content-->
			      <div class="modal-content">
			        <div class="modal-header">
			          <button type="button" class="close" onclick="close_modal()">&times;</button>
			          <h4 class="modal-title">Tasks of <%=@card.title%></h4>
			        </div>
			        <div class="modal-body">
			          <table class="table table-hover" data-card="<%=@card.id%>">
			          	<thead>
			          		<tr>
  			

			          			<th colspan="2">
			          				<%= link_to new_card_task_url(@card) do %>
			          					<span class="btn btn-primary">Add New Task</span>
			          				<%end%>
			          			</th>
			          		</tr>
			          		<tr>
			          			<th id="message"></th>
			          		</tr>
			          	</thead>
			          	<tbody>
			          		<% @tasks.each do |task| %>
			          			<tr>
			          				<td><%=task.title%></td>
			          				<td><%= check_box_tag 'task_ids[]', task.id , task.completed%></td>
			          			</tr>
			          		<%end%>
			          	</tbody>
			          </table>
			        </div>
			        <div class="modal-footer">
			          <button type="button" class="btn btn-default" onclick="close_modal()">Close</button>
			        </div>
			      </div>
			      
			    </div>