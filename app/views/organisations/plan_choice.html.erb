<br>
<br>
<div class="container-fluid">

    <% first = current_user.organisation.subscription || @subscriptions.first %>
    <% @subscriptions.each do |subscription_type| %>
    <div class="col-3 btn btn-secondary subscription_type <%= border(first.id, subscription_type.id) %>" onclick="select_subsciption_type('<%=subscription_type.id%>')" id="subscription_type_<%=subscription_type.id%>">

     <p><b> <%= subscription_type.title %></b></p>
     <p><%= subscription_type.description %></p>
     <p><b>Minimum Number of Users</b> <span><%= subscription_type.minimum_users %></span></p>
    </div>
    <%end%>

<%= form_for @organisation, as: :subscribe, url: subscribed_organisations_path do |form| %>
	<%= form.hidden_field :id %>
  <div class="form-group row">
    <%= form.hidden_field :subscription_id, :value => first.id %>
  </div>



  <div class="form-group">
  	<div class="col-11" id="subscription_type_details">
  		
  	</div>
  </div> 
   <div style="display: flex;"> 
    <div class="col-10 subscription_messages"></div>
  	<div class="col-1">	<%= form.submit "Pay", :class => "btn btn-lg btn-info subscribe_button" %></div>
  </div>
</div>
<%end%>
</div>
<script type="text/javascript">
  select_subsciption_type("<%= first.id %>")
</script>